<%= turbo_frame_tag "market_data" do %>
<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white flex flex-col">
  <div class="max-w-md w-full mx-auto py-8 px-6">
    <div class="bg-white border border-gray-200 rounded-lg shadow-lg p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Reset PIN</h2>
        <%= link_to more_path, class: "text-gray-400 hover:text-gray-600" do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% end %>
      </div>

      <% if flash[:alert] %>
        <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded text-sm text-red-800">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= form_with url: update_pin_path, method: :patch, local: true, class: "space-y-5", data: { turbo_frame: "market_data" } do |f| %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Current PIN</label>
          <%= password_field_tag :current_pin, nil, maxlength: 4, pattern: "\\d{4}", inputmode: "numeric", class: "w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">New PIN</label>
            <%= password_field_tag :new_pin, nil, maxlength: 4, pattern: "\\d{4}", inputmode: "numeric", class: "w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Confirm PIN</label>
            <%= password_field_tag :new_pin_confirmation, nil, maxlength: 4, pattern: "\\d{4}", inputmode: "numeric", class: "w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
          </div>
        </div>

        <div class="pt-2">
          <%= submit_tag "Update PIN", class: "w-full inline-flex justify-center items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% end %>

