<%= turbo_frame_tag "market_data" do %>
  <div class="max-w-2xl mx-auto">
    <div class="bg-white border border-gray-200 rounded-lg shadow-lg p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900">More</h2>
        <%= link_to root_path, class: "text-gray-400 hover:text-gray-600", data: { turbo_frame: "market_data" } do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% end %>
      </div>

      <!-- Menu Items -->
      <div class="space-y-6">
        <!-- Settings Section -->
        <div>
          <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Settings</h3>
          <div class="space-y-2">
            <!-- Reset PIN -->
            <%= link_to edit_pin_path, data: { turbo_frame: "market_data" }, class: "flex items-center justify-between px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors" do %>
              <div class="flex items-center space-x-3">
                <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                <span class="font-medium">Reset PIN</span>
              </div>
              <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            <% end %>
          </div>
        </div>

        <!-- Other Sections -->
        <div>
          <h3 class="px-4 text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Support</h3>
          <div class="space-y-2">
            <div class="px-4 py-3 text-gray-400 text-sm">About</div>
            <div class="px-4 py-3 text-gray-400 text-sm">Help & Support</div>
          </div>
        </div>

        <!-- Logout Section -->
        <div class="pt-4 border-t border-gray-200">
          <%= button_to logout_path, method: :delete, data: { turbo: false }, class: "w-full flex items-center justify-between px-4 py-3 text-left text-red-600 hover:bg-red-50 rounded-lg transition-colors" do %>
            <div class="flex items-center space-x-3">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              <span class="font-medium">Logout</span>
            </div>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

