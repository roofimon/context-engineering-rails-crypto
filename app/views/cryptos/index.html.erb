<% content_for :title, "Assets Price - Store" %>

<div class="min-h-screen bg-white">
  <!-- Header -->
  <header class="border-b border-gray-200 bg-white">
    <div class="max-w-7xl mx-auto px-6 py-6">
      <h1 class="text-3xl font-bold text-gray-900">Assets Price</h1>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-6 py-8">
    <%= turbo_frame_tag "market_data" do %>
      <!-- Desktop Table View -->
      <div class="hidden md:block overflow-x-auto">
      <table class="w-full">
        <thead>
          <tr class="border-b border-gray-200">
            <th class="text-left py-4 px-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Asset</th>
            <th class="text-right py-4 px-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Holdings</th>
            <th class="text-right py-4 px-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Binance</th>
            <th class="text-right py-4 px-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Coinbase</th>
            <th class="text-right py-4 px-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Price</th>
            <th class="text-right py-4 px-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Estimated Value</th>
            <th class="text-right py-4 px-4 text-sm font-semibold text-gray-600 uppercase tracking-wider">Change</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @assets.each do |asset| %>
            <tr class="hover:bg-gray-50 transition-colors">
              <!-- Asset Column -->
              <td class="py-5 px-4">
                <div class="flex items-center space-x-3">
                  <div class="flex-shrink-0 w-10 h-10 rounded-full bg-black flex items-center justify-center">
                    <span class="text-white text-xs font-semibold"><%= asset[:icon] %></span>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-900"><%= asset[:name] %></div>
                    <%= link_to asset[:symbol], 
                        buy_crypto_path(asset[:symbol]), 
                        class: "text-sm text-gray-500 hover:text-blue-600 cursor-pointer",
                        data: { turbo_frame: "market_data" } %>
                  </div>
                </div>
              </td>

              <!-- Holdings Column -->
              <td class="py-5 px-4 text-right">
                <span class="text-sm font-medium text-gray-900">
                  <%= format_quantity(asset[:quantity]) %>
                </span>
              </td>

              <!-- Exchange Prices -->
              <% %w[Binance Coinbase].each do |exchange| %>
                <td class="py-5 px-4 text-right">
                  <% if asset[:exchanges][exchange] && asset[:exchanges][exchange][:price] %>
                    <div class="flex items-center justify-end space-x-2">
                      <% change = asset[:exchanges][exchange][:change] %>
                      <% if change == :up %>
                        <div class="w-2 h-2 rounded-full bg-green-500"></div>
                      <% elsif change == :down %>
                        <div class="w-2 h-2 rounded-full bg-red-500"></div>
                      <% end %>
                      <span class="text-sm text-gray-900 font-medium">
                        $<%= format_price(asset[:exchanges][exchange][:price]) %>
                      </span>
                    </div>
                  <% else %>
                    <span class="text-sm text-gray-400">â€”</span>
                  <% end %>
                </td>
              <% end %>

              <!-- Overall Price -->
              <td class="py-5 px-4 text-right">
                <span class="text-base font-semibold text-gray-900">
                  $<%= format_price(asset[:overall_price]) %>
                </span>
              </td>

              <!-- Estimated Value -->
              <td class="py-5 px-4 text-right">
                <span class="text-base font-semibold text-blue-600">
                  $<%= format_price(estimated_value(asset)) %>
                </span>
              </td>

              <!-- Change -->
              <td class="py-5 px-4 text-right">
                <span class="text-sm font-medium text-green-600">
                  +<%= format_change(asset[:change]) %>%
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Mobile Card View -->
    <div class="md:hidden space-y-4">
      <% @assets.each do |asset| %>
        <div class="bg-white border border-gray-200 rounded-lg p-4">
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 rounded-full bg-black flex items-center justify-center">
                <span class="text-white text-xs font-semibold"><%= asset[:icon] %></span>
              </div>
              <div>
                <div class="text-base font-medium text-gray-900"><%= asset[:name] %></div>
                <%= link_to asset[:symbol], 
                    buy_crypto_path(asset[:symbol]), 
                    class: "text-sm text-gray-500 hover:text-blue-600 cursor-pointer",
                    data: { turbo_frame: "market_data" } %>
              </div>
            </div>
            <div class="text-right">
              <div class="text-sm text-gray-600 mb-1">
                Holdings: <span class="font-medium text-gray-900"><%= format_quantity(asset[:quantity]) %></span>
              </div>
              <div class="text-lg font-semibold text-gray-900 mb-1">
                $<%= format_price(asset[:overall_price]) %>
              </div>
              <div class="text-base font-semibold text-blue-600 mb-1">
                Est. Value: $<%= format_price(estimated_value(asset)) %>
              </div>
              <div class="text-sm font-medium text-green-600">
                +<%= format_change(asset[:change]) %>%
              </div>
            </div>
          </div>
          
          <div class="grid grid-cols-2 gap-3">
            <% %w[Binance Coinbase].each do |exchange| %>
              <% data = asset[:exchanges][exchange] %>
              <% if data && data[:price] %>
                <div class="flex items-center justify-between">
                  <span class="text-xs text-gray-600"><%= exchange %></span>
                  <div class="flex items-center space-x-1">
                    <% if data[:change] == :up %>
                      <div class="w-2 h-2 rounded-full bg-green-500"></div>
                    <% elsif data[:change] == :down %>
                      <div class="w-2 h-2 rounded-full bg-red-500"></div>
                    <% end %>
                    <span class="text-sm text-gray-900 font-medium">
                      $<%= format_price(data[:price]) %>
                    </span>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </main>

  <!-- Bottom Navigation (Mobile only) -->
  <nav class="md:hidden fixed bottom-0 left-0 right-0 border-t border-gray-200 bg-white">
    <div class="flex justify-around py-3">
      <a href="#" class="flex flex-col items-center space-y-1">
        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
        <span class="text-xs text-gray-600">Home</span>
      </a>
      <a href="#" class="flex flex-col items-center space-y-1">
        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
        <span class="text-xs text-gray-600">Explore</span>
      </a>
      <a href="#" class="flex flex-col items-center space-y-1">
        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"></path>
        </svg>
        <span class="text-xs text-gray-600">More</span>
      </a>
    </div>
  </nav>
</div>

