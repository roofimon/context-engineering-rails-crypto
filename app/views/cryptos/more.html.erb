<%= turbo_frame_tag "market_data" do %>
  <div class="max-w-2xl mx-auto">
    <div class="bg-white border border-gray-200 rounded-lg shadow-lg p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900">More</h2>
        <%= link_to root_path, class: "text-gray-400 hover:text-gray-600", data: { turbo_frame: "market_data" } do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% end %>
      </div>

      <!-- Menu Items -->
      <div class="space-y-4">
        <!-- Logout Button -->
        <div class="border-b border-gray-200 pb-4">
          <%= button_to logout_path, method: :delete, class: "w-full flex items-center justify-between px-4 py-3 text-left text-red-600 hover:bg-red-50 rounded-lg transition-colors" do %>
            <div class="flex items-center space-x-3">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
              </svg>
              <span class="font-medium">Logout</span>
            </div>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          <% end %>
        </div>

        <!-- Placeholder for future menu items -->
        <div class="space-y-2">
          <div class="px-4 py-2 text-sm text-gray-500">Settings</div>
          <div class="px-4 py-2 text-sm text-gray-500">About</div>
          <div class="px-4 py-2 text-sm text-gray-500">Help & Support</div>
        </div>
      </div>
    </div>
  </div>
<% end %>

