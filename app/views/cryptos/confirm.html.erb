<%= turbo_frame_tag "market_data" do %>
  <div class="max-w-2xl mx-auto">
    <div class="bg-white border border-gray-200 rounded-lg shadow-lg p-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Confirm Order</h2>
        <%= link_to root_path, class: "text-gray-400 hover:text-gray-600", data: { turbo_frame: "market_data" } do %>
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        <% end %>
      </div>

      <!-- Order Summary -->
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Order Summary</h3>
        
        <div class="bg-gray-50 rounded-lg p-4 space-y-4">
          <div class="flex items-center space-x-3 pb-4 border-b border-gray-200">
            <div class="flex-shrink-0 w-12 h-12 rounded-full bg-black flex items-center justify-center">
              <span class="text-white text-sm font-semibold"><%= @asset[:icon] %></span>
            </div>
            <div>
              <div class="text-base font-medium text-gray-900"><%= @asset[:name] %></div>
              <div class="text-sm text-gray-500"><%= @asset[:symbol] %></div>
            </div>
          </div>

          <div class="space-y-3">
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Number of Units</span>
              <span class="text-sm font-medium text-gray-900"><%= format_quantity(@units) %></span>
            </div>
            
            <div class="flex justify-between items-center">
              <span class="text-sm text-gray-600">Market Price</span>
              <span class="text-sm font-medium text-gray-900">$<%= format_price(@market_price) %></span>
            </div>
            
            <div class="flex justify-between items-center pt-3 border-t border-gray-200">
              <span class="text-base font-semibold text-gray-900">Total Cost</span>
              <span class="text-lg font-bold text-blue-600">$<%= format_price(@total_cost) %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex justify-end space-x-3">
        <%= form_with url: verify_order_pin_path(symbol: @asset[:symbol]), method: :post, local: true, data: { turbo_frame: "_top" } do |f| %>
          <%= f.hidden_field :units, value: @units %>
          <%= f.hidden_field :market_price, value: @market_price %>
          <%= f.submit "Confirm", class: "px-8 py-3 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 font-medium" %>
        <% end %>
        <%= link_to "Cancel", buy_crypto_path(@asset[:symbol]), 
            class: "px-4 py-3 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 font-medium",
            data: { turbo_frame: "market_data" } %>
      </div>
    </div>
  </div>
<% end %>

